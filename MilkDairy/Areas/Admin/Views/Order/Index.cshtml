<partial name="_notificationView" />
@{
    var status = Context.Request.Query["status"];
    var process = "text-gray-700";
    var pending = "text-gray-700";
    var completed = "text-gray-700";
    var approved = "text-gray-700";
    var all = "text-gray-700";

    switch (status)
    {
        case "process": process = "bg-blue-500 text-white"; break;
        case "pending": pending = "bg-blue-500 text-white"; break;
        case "completed": completed = "bg-blue-500 text-white"; break;
        case "approved": approved = "bg-blue-500 text-white"; break;
        default: all = "bg-blue-500 text-white"; break;
    }
}

<div class="container mx-auto px-4 py-6 rounded-lg bg-white shadow-md">
    <!-- Header Section -->
    <div class="mb-4 flex items-center justify-between">
        <h1 class="text-3xl font-extrabold tracking-wide text-gray-800">Order List</h1>
    </div>

    <!-- Filter Buttons -->
    <div class="mb-6 w-full overflow-x-auto rounded-lg bg-white p-3 shadow-md">
        <ul class="flex flex-wrap gap-4 justify-start">
            <a asp-controller="Order" asp-action="Index" asp-route-status="process"
               class="px-4 py-2 rounded-md border border-gray-300 shadow-sm hover:bg-blue-100 transition @process">
            <li>In Process</li>
            </a>
            <a asp-controller="Order" asp-action="Index" asp-route-status="pending"
               class="px-4 py-2 rounded-md border border-gray-300 shadow-sm hover:bg-blue-100 transition @pending">
            <li>Payment Pending</li>
            </a>
            <a asp-controller="Order" asp-action="Index" asp-route-status="completed"
               class="px-4 py-2 rounded-md border border-gray-300 shadow-sm hover:bg-blue-100 transition @completed">
            <li>Completed</li>
            </a>
            <a asp-controller="Order" asp-action="Index" asp-route-status="approved"
               class="px-4 py-2 rounded-md border border-gray-300 shadow-sm hover:bg-blue-100 transition @approved">
            <li>Approved</li>
            </a>
            <a asp-controller="Order" asp-action="Index" asp-route-status="all"
               class="px-4 py-2 rounded-md border border-gray-300 shadow-sm hover:bg-blue-100 transition @all">
            <li>All</li>
            </a>
        </ul>
    </div>

    <!-- Table Section with DataTable -->
    <div class="flex justify-center">
        <div class="w-full overflow-x-auto rounded-lg bg-white p-3 shadow-md">
            <table id="myTable" class="w-full table-auto border-collapse border border-gray-300">
                <thead class="bg-blue-300 text-white">
                    <tr>
                        <th class="px-4 py-2 text-left text-sm font-medium">ID</th>
                        <th class="px-4 py-2 text-left text-sm font-medium">Name</th>
                        <th class="px-4 py-2 text-left text-sm font-medium">Phone Number</th>
                        <th class="px-4 py-2 text-left text-sm font-medium">Email</th>
                        <th class="px-4 py-2 text-left text-sm font-medium">Order Status</th>
                        <th class="px-4 py-2 text-left text-sm font-medium">Order Total</th>
                        <th class="px-4 py-2 text-left text-sm font-medium">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Data will be dynamically loaded here by DataTable -->
                </tbody>
            </table>
        </div>
    </div>

    @section Scripts {
        <script src="~/js/order.js"></script>
    }
</div>
