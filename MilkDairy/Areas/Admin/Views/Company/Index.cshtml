@model List<Company>
<partial name="_notificationView" />

<div class="container mx-auto rounded-lg bg-gray-50 p-8 shadow-lg">
    <!-- Header Section -->
    <div class="mb-6 flex items-center justify-between">
        <h1 class="text-3xl font-extrabold tracking-wide text-gray-800">Product List</h1>
        <a asp-action="Upsert" asp-controller="Company"
           class="inline-block transform rounded-md bg-gradient-to-r from-blue-500 to-blue-700 px-6 py-2 font-medium text-white shadow-md transition duration-300 hover:from-blue-600 hover:to-blue-800 hover:scale-105">
            Add New Item
        </a>
    </div>

    <!-- Table Section -->
    <div class="overflow-x-auto">
        <table id="mytable" class="min-w-full table-auto rounded-lg border border-gray-300 bg-white">
        <thead>
           
                <tr class="bg-blue-100 text-left font-semibold text-gray-700">
                    <th class="border border-gray-300 px-4 py-3">Id</th>
                    <th class="border border-gray-300 px-4 py-3">Name</th>
                    <th class="border border-gray-300 px-4 py-3">Street Address</th>
                    <th class="border border-gray-300 px-4 py-3">State</th>
                    <th class="border border-gray-300 px-4 py-3">City</th>
                    <th class="border border-gray-300 px-4 py-3">Postal Code</th>
                    <th class="border border-gray-300 px-4 py-3">Phone Number</th>
                    <th class="border border-gray-300 px-4 py-3">Action</th>
                </tr>
           
        </thead>
            
               
            
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}
