@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<div class="flex min-h-screen items-center justify-center bg-gray-50 px-4 py-12 sm:px-6 lg:px-8">
    <div id="register-form-container"></div>

    <div class="w-full max-w-md space-y-8">
        <div>
            <h1 class="text-center text-3xl font-extrabold text-gray-900">Create a new account</h1>
            <p class="mt-2 text-center text-sm text-gray-600">
                Or <a asp-page="./Login" class="font-medium text-blue-600 hover:text-blue-500">sign in to your account</a>
            </p>
        </div>
        <div class="rounded-lg bg-white px-6 py-8 shadow-lg sm:px-10">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="mb-4 text-sm text-red-500" role="alert"></div>

                <div class="mb-6">
                    <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700">Email address</label>
                    <input asp-for="Input.Email" class="mt-1 block w-full rounded-md border-gray-300 p-3 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="you@example.com" />
                    <span asp-validation-for="Input.Email" class="mt-1 text-xs text-red-500"></span>
                </div>
                <div class="mb-6">
                    <label asp-for="Input.Name" class="block text-sm font-medium text-gray-700">Name</label>
                    <input asp-for="Input.Name" class="mt-1 block w-full rounded-md border-gray-300 p-3 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="Name" />
                    <span asp-validation-for="Input.Name" class="mt-1 text-xs text-red-500"></span>
                </div>
                <div class="mb-6">
                    <label asp-for="Input.Phonenumber" class="block text-sm font-medium text-gray-700">Phone number</label>
                    <input asp-for="Input.Phonenumber" class="mt-1 block w-full rounded-md border-gray-300 p-3 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="Phone number" />
                    <span asp-validation-for="Input.Phonenumber" class="mt-1 text-xs text-red-500"></span>
                </div>
                <div class="mb-6">
                    <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700">Password</label>
                    <input asp-for="Input.Password" class="mt-1 block w-full rounded-md border-gray-300 p-3 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="mt-1 text-xs text-red-500"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="mt-1 block w-full rounded-md border-gray-300 p-3 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="Confirm Password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="mt-1 text-xs text-red-500"></span>
                </div>
                <div class="mb-6">
                    <label asp-for="Input.Address" class="block text-sm font-medium text-gray-700">Home address</label>
                    <input asp-for="Input.Address" class="mt-1 block w-full rounded-md border-gray-300 p-3 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="Address" />
                    <span asp-validation-for="Input.Address" class="mt-1 text-xs text-red-500"></span>
                </div>
                <div class="mb-6">
                    <label asp-for="Input.State" class="block text-sm font-medium text-gray-700">State</label>
                    <input asp-for="Input.State"  class="mt-1 block w-full rounded-md border-gray-300 p-3 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="State" />
                    <span asp-validation-for="Input.State" class="mt-1 text-xs text-red-500"></span>
                </div>
                <div class="mb-6">
                    <label asp-for="Input.City" class="block text-sm font-medium text-gray-700">City name</label>
                    <input asp-for="Input.City" class="mt-1 block w-full rounded-md border-gray-300 p-3 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="City Name" />
                    <span asp-validation-for="Input.City" class="mt-1 text-xs text-red-500"></span>
                </div>
                <div class="mb-6">
                    <label asp-for="Input.Pincode" class="block text-sm font-medium text-gray-700">Pin code</label>
                    <input asp-for="Input.Pincode" class="mt-1 block w-full rounded-md border-gray-300 p-3 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="Pin code" />
                    <span asp-validation-for="Input.Pincode" class="mt-1 text-xs text-red-500"></span>
                </div>
                
                <div class="mb-6">
                    
                    <select asp-for="Input.SelectRole" asp-items="@Model.Input.RoleList" class="mt-1 block w-full rounded-md border-gray-300 p-3 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                        <option value="" disabled selected>-- Select a Role --</option>
                    </select>
                    
                </div><div class="mb-6">
                 
                    <select asp-for="Input.CompanyID" style="display:none" asp-items="@Model.Input.CompanyList" class="mt-1 block w-full rounded-md border-gray-300 p-3 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                        <option value="" disabled selected>-- Select a Company --</option>
                    </select>
                    
                </div>

                <div>
                    <button id="registerSubmit" type="submit" class="flex w-full justify-center rounded-md border border-transparent bg-blue-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Register</button>
                </div>
            </form>

            <div class="mt-6">
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="bg-white px-2 text-gray-500">Or register with</span>
                    </div>
                </div>

                <div class="mt-6 grid grid-cols-1 gap-6">
                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <div class="mt-3">
                                <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div>
                                        <button type="submit" class="inline-flex w-full justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-500 shadow-sm hover:bg-gray-50" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                            <span class="sr-only">Sign in with @provider.DisplayName</span>
                                            @provider.DisplayName
                                        </button>
                                    </div>
                                </form>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-center text-sm text-gray-500">No external login services configured.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function(){
            $('#Input_SelectRole').change(function(){
                var Select = $('#Input_SelectRole  Option:Selected').text();
                if(Select == 'Company'){
                    $('#Input_CompanyID').show();
                }
                else{
                     $('#Input_CompanyID').hide();
                }

            })
        })

    </script>
    <script src="/js/react-register/main.js"></script>
    <link href="/js/react-register/main.css" rel="stylesheet" />
}
