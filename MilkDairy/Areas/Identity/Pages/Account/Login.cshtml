@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<h1 class="text-center text-2xl">@ViewData["Title"]</h1>

<div class="flex flex-wrap">
    <!-- Form Section -->
    <div class="flex w-full flex-col items-center justify-center px-8">
        <section class="w-full max-w-md rounded-lg bg-white p-8 shadow-md">
            <form id="account" method="post">
                <h2 class="mb-4 text-2xl font-bold text-gray-800">Use a local account to log in.</h2>
                <hr class="mb-4 border-gray-200" />

                <div asp-validation-summary="ModelOnly" class="mb-4 text-red-500" role="alert"></div>

                <!-- Email Input -->
                <div class="mb-4">
                    <input asp-for="Input.Email" class="w-full appearance-none rounded-md border border-gray-300 px-3 py-2 leading-tight text-gray-700 focus:outline-none focus:ring-blue-300 focus:border-blue-300" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="mb-2 block text-gray-600">Email</label>
                    <span asp-validation-for="Input.Email" class="text-red-500"></span>
                </div>

                <!-- Password Input -->
                <div class="mb-4">
                    <input asp-for="Input.Password" class="w-full appearance-none rounded-md border border-gray-300 px-3 py-2 leading-tight text-gray-700 focus:outline-none focus:ring-blue-300 focus:border-blue-300" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="mb-2 block text-gray-600">Password</label>
                    <span asp-validation-for="Input.Password" class="text-red-500"></span>
                </div>

                <!-- Remember Me -->
                <div class="mb-4 flex items-center">
                    <label asp-for="Input.RememberMe" class="mr-2 text-gray-600">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <!-- Login Button -->
                <div>
                    <button id="login-submit" type="submit" class="w-full rounded-md bg-blue-600 px-4 py-2 font-bold text-white shadow hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-300">
                        Log in
                    </button>
                </div>

                <!-- Additional Links -->
                <div class="mt-6 text-sm text-gray-600">
                    <p class="mb-2">
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-blue-500 hover:underline">Forgot your password?</a>
                    </p>
                    <p class="mb-2">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-blue-500 hover:underline">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-blue-500 hover:underline">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

    <!-- Image Section -->
   @*  <div class="hidden w-full bg-cover bg-center md:w-1/2 md:block" style="background-image: url('path/to/your/image.jpg')"></div> *@
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
