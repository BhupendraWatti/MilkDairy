@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<h1>@ViewData["Title"]</h1>
<h2>Reset your password.</h2>
<hr />
<div class="flex flex-wrap">
    <div class="w-full md:w-1/2">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="mb-4 text-red-500" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />
            <div class="mb-3">
                <input asp-for="Input.Email" class="block w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="text-gray-700">Email</label>
                <span asp-validation-for="Input.Email" class="text-red-500"></span>
            </div>
            <div class="mb-3">
                <input asp-for="Input.Password" class="block w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500" autocomplete="new-password" aria-required="true" placeholder="Please enter your password." />
                <label asp-for="Input.Password" class="text-gray-700">Password</label>
                <span asp-validation-for="Input.Password" class="text-red-500"></span>
            </div>
            <div class="mb-3">
                <input asp-for="Input.ConfirmPassword" class="block w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500" autocomplete="new-password" aria-required="true" placeholder="Please confirm your password." />
                <label asp-for="Input.ConfirmPassword" class="text-gray-700">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-500"></span>
            </div>
            <button type="submit" class="w-full rounded-md bg-blue-500 px-4 py-2 font-bold text-white shadow hover:bg-blue-700">Reset</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}