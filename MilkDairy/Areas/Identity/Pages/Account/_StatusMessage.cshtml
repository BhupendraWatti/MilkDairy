@model string
@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Error") ? "text-red-500 bg-red-100 border border-red-400" : "text-green-700 bg-green-100 border border-green-400";
    <div class="mb-4 rounded-lg p-4 @statusMessageClass" role="alert">
        <button type="button" class="float-right text-2xl font-bold leading-none text-red-600 opacity-50 hover:opacity-75 focus:outline-none" data-bs-dismiss="alert" aria-label="Close">&times;</button>
        @Model
    </div>
}