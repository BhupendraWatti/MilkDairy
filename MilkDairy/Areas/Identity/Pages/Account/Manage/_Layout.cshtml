@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
}
<head>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<h1 class="mb-6 text-3xl font-bold text-gray-800">Manage your account</h1>

<div class="flex flex-wrap">
    <!-- Navigation Section -->
    @* <div class="w-full rounded-lg bg-gray-100 p-4 shadow-md md:w-1/3">
        <partial name="_ManageNav" />
    </div> *@

    <!-- Content Section -->
    <div class="mt-6 w-full md:mt-0 md:w-2/3 md:pl-8">
        <h2 class="mb-4 text-2xl font-semibold text-gray-700">Change your account settings</h2>
        <hr class="mb-6 border-gray-300" />
        <div class="rounded-lg bg-white p-6 shadow-md">
            @RenderBody()
            
        </div>
        
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
