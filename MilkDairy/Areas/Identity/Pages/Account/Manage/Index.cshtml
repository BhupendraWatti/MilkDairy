@page
@using MilkDairy.Areas.Identity.Pages.Account.Manage
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<body class="bg-white">

<div class="bg-white min-h-screen py-8">
    <div class="w-full px-4 sm:px-6 lg:px-8">
        <!-- Page Header -->
        <div class="mb-8 border-b border-gray-200 pb-4">
            <h2 class="text-3xl font-bold text-gray-800">@ViewData["Title"]</h2>
            <p class="text-gray-600 mt-2">Manage your account settings and preferences</p>
        </div>

        <partial name="_StatusMessage" for="StatusMessage" />

        <div class="flex  flex-col lg:flex-row gap-8">
            <!-- Left Sidebar Navigation -->
            <div class="lg:w-1/4">
                <div class="bg-gray-50 rounded-lg p-6 sticky top-4">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4 border-b pb-2">Account Settings</h3>
                    <nav class="space-y-2">
                        <a href="#profile-section" class="account-nav-item flex items-center p-2 rounded-md text-blue-600 bg-blue-50 font-medium">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            Profile Information
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" class="account-nav-item flex items-center p-2 rounded-md text-gray-700 hover:bg-gray-50">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                            </svg>
                            Change Password
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Manage/Email" class="account-nav-item flex items-center p-2 rounded-md text-gray-700 hover:bg-gray-50">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                            Email Settings
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Manage/TwoFactorAuthentication" class="account-nav-item flex items-center p-2 rounded-md text-gray-700 hover:bg-gray-50">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                            </svg>
                            Two-Factor Authentication
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Manage/PersonalData" class="account-nav-item flex items-center p-2 rounded-md text-gray-700 hover:bg-gray-50">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                            </svg>
                            Personal Data
                        </a>
                    </nav>
                </div>
            </div>

            <!-- Main Content Area -->
            <div class="lg:w-3/4 flex flex-col items-center">
                <!-- Profile Information Section -->
                <section id="profile-section" class="mb-8">
                    <div class="bg-blue-50 px-6 py-4 border-l-4 border-blue-500">
                        <h3 class="text-xl font-semibold text-gray-800 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            Profile Information
                        </h3>
                    </div>
                    <div class="bg-transparent p-0 rounded-none shadow-none">
                        <form id="profile-form" method="post" class="space-y-6">
                            <!-- Validation Summary -->
                            <div asp-validation-summary="ModelOnly" class="text-red-500 p-4 bg-red-50 rounded-md" role="alert"></div>

                            <!-- User Information -->
                            <div class="grid md:grid-cols-2 gap-6">
                                <!-- Username Field -->
                                <div class="relative">
                                    <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
                                    <div class="mt-1 relative rounded-md">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                            </svg>
                                        </div>
                                        <input type="text" asp-for="Username" class="block w-full pl-10 pr-3 py-2 rounded-lg border-gray-300 bg-gray-50 text-gray-500 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" disabled />
                                    </div>
                                    <p class="mt-1 text-xs text-gray-500">Your username cannot be changed</p>
                                </div>

                                <!-- Phone Number Field -->
                                <div class="relative">
                                    <label asp-for="Input.PhoneNumber" class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
                                    <div class="mt-1 relative rounded-md">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                            </svg>
                                        </div>
                                        <input type="text" asp-for="Input.PhoneNumber" class="block w-full pl-10 pr-3 py-2 rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="Enter phone number" />
                                    </div>
                                    <span asp-validation-for="Input.PhoneNumber" class="mt-1 text-sm text-red-600"></span>
                                </div>
                            </div>

                            <!-- Save Changes Button -->
                            <div class="flex justify-end pt-4">
                                <button id="update-profile-button" type="submit" class="inline-flex items-center px-6 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-150">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                    Save Changes
                                </button>
                            </div>
                        </form>
                    </div>
                </section>

                <!-- Account Management Options -->
                <section class="mb-8">
                    <div class="bg-gray-50 px-6 py-4 border-l-4 border-gray-500">
                        <h3 class="text-xl font-semibold text-gray-800 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            Account Management
                        </h3>
                    </div>
                    <div class="p-6 bg-white border border-gray-100">
                        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                            <!-- Security Settings -->
                            <div class="border-l-4 border-red-400 pl-4">
                                <h4 class="text-lg font-medium text-gray-800 mb-2 flex items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                    </svg>
                                    Password Security
                                </h4>
                                <p class="text-gray-600 text-sm mb-3">Update your password to maintain account security</p>
                                <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" class="text-red-600 hover:text-red-700 text-sm font-medium flex items-center mt-2">
                                    Change Password
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                    </svg>
                                </a>
                            </div>

                            <!-- Email Settings -->
                            <div class="border-l-4 border-blue-400 pl-4">
                                <h4 class="text-lg font-medium text-gray-800 mb-2 flex items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                    </svg>
                                    Email Address
                                </h4>
                                <p class="text-gray-600 text-sm mb-3">Update your email and communication preferences</p>
                                <a asp-area="Identity" asp-page="/Account/Manage/Email" class="text-blue-600 hover:text-blue-700 text-sm font-medium flex items-center mt-2">
                                    Update Email
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                    </svg>
                                </a>
                            </div>

                            <!-- Personal Data -->
                            <div class="border-l-4 border-green-400 pl-4">
                                <h4 class="text-lg font-medium text-gray-800 mb-2 flex items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                                    </svg>
                                    Personal Data
                                </h4>
                                <p class="text-gray-600 text-sm mb-3">Download or manage your personal data</p>
                                <a asp-area="Identity" asp-page="/Account/Manage/PersonalData" class="text-green-600 hover:text-green-700 text-sm font-medium flex items-center mt-2">
                                    Access Data
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Two-Factor Authentication Section -->
                <section class="mb-8">
                    <div class="bg-yellow-50 px-6 py-4 border-l-4 border-yellow-500">
                        <h3 class="text-xl font-semibold text-gray-800 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                            </svg>
                            Two-Factor Authentication
                        </h3>
                    </div>
                    <div class="p-6 bg-white border border-gray-100">
                        <div class="flex items-start">
                            <div class="flex-shrink-0 mt-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                </svg>
                            </div>
                            <div class="ml-4">
                                <h4 class="text-lg font-medium text-gray-900">Enhance Your Account Security</h4>
                                <p class="mt-1 text-gray-600">Enable two-factor authentication to add an extra layer of security to your account.</p>
                                <div class="mt-4">
                                    <a asp-area="Identity" asp-page="/Account/Manage/TwoFactorAuthentication" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                        Manage 2FA Settings
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Highlight active navigation item based on scroll position
        document.addEventListener('DOMContentLoaded', function() {
            const navItems = document.querySelectorAll('.account-nav-item');
            const sections = document.querySelectorAll('section');

            // Add smooth scrolling to navigation items
            navItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    if (this.getAttribute('href').startsWith('#')) {
                        e.preventDefault();
                        const targetId = this.getAttribute('href');
                        const targetSection = document.querySelector(targetId);
                        if (targetSection) {
                            window.scrollTo({
                                top: targetSection.offsetTop - 20,
                                behavior: 'smooth'
                            });
                        }
                    }
                });
            });

            // Basic form validation
            const profileForm = document.getElementById('profile-form');
            if (profileForm) {
                profileForm.addEventListener('submit', function(e) {
                    const phoneInput = document.querySelector('[name="Input.PhoneNumber"]');
                    if (phoneInput && phoneInput.value && !validatePhoneNumber(phoneInput.value)) {
                        e.preventDefault();
                        alert('Please enter a valid phone number');
                    }
                });
            }

            // Simple phone validation
            function validatePhoneNumber(phone) {
                // This is a basic validation - customize as needed
                return phone.length >= 10;
            }
        });
    </script>
}