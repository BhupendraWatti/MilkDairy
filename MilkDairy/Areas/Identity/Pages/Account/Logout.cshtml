@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header class="flex flex-col items-center">
    <h1>@ViewData["Title"]</h1>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <form class="inline-flex" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit" class="text-blue-500 hover:underline">Click here to Logout</button>
        </form>
    }
    else
    {
        <p class="text-green-500">You have successfully logged out of the application.</p>
    }
</header>