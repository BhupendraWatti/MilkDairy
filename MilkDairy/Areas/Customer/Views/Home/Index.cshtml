@model IEnumerable<Product>

<div class="min-h-screen py-10">
    <div class="container mx-auto px-4">
        <!-- Product Grid -->
        <div class="grid-cols-1 grid gap-6 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-4">
            @foreach (var items in Model)
            {
                <div class="transform rounded-xl bg-white shadow-lg transition duration-300 ease-in-out hover:shadow-2xl hover:scale-105">
                    <!-- Product Image -->
                    <div class="overflow-hidden rounded-t-xl">
                        <img src="@items.ImgURL" alt="@items.Name" class="h-[300px] w-full object-cover transition duration-300 ease-in-out">
                    </div>

                    <!-- Product Info -->
                    <div class="p-5">
                        <h3 class="truncate text-xl font-semibold text-gray-800">@items.Name</h3>
                        <p class="mt-2 text-sm font-extrabold text-yellow-500">@items.Brand</p>
                        <p class="mt-2 text-lg font-bold text-gray-700">Rs @items.UnitPrice</p>

                        <!-- Hover effect details button -->
                        <div class="mt-4">
                            <a asp-action="Details" asp-route-productID="@items.Id"
                               class="block w-full rounded-lg via-purple-300 to-purple-500 px-4 py-2 text-center font-semibold transition duration-200 hover:bg-gradient-to-r hover:from-purple-500">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
