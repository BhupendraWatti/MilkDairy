@model ShoppingCart
<form method="post">
    <input hidden asp-for="ProductID" />
    <div class="min-h-screen bg-gray-50 py-6 md:py-10 px-4">
        <div class="container mx-auto max-w-6xl">
            <!-- Breadcrumb Navigation -->
            <nav class="hidden md:flex items-center mb-6 text-sm">
                <a href="/" class="text-gray-500 hover:text-purple-600 transition-colors">Home</a>
                <span class="mx-2 text-gray-400">/</span>
                <a href="/Shop" class="text-gray-500 hover:text-purple-600 transition-colors">Shop</a>
                <span class="mx-2 text-gray-400">/</span>
                <span class="text-gray-800 font-medium">@Model.Product.Name</span>
            </nav>

            <!-- Product Card -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <!-- Product Top Section -->
                <div class="grid grid-cols-1 lg:grid-cols-2">
                    <!-- Product Image -->
                    <div class="relative flex items-center justify-center p-4 md:p-8 bg-gray-50">
                        <!-- Sale badge if applicable -->
                        <div class="absolute top-4 left-4 bg-red-500 text-white text-xs font-bold px-3 py-1 rounded-full">
                            SALE
                        </div>

                        <div class="relative w-full h-64 md:h-80 lg:h-96 flex items-center justify-center">
                            <img src="@Model.Product.ImgURL" alt="@Model.Product.Name" class="max-h-full max-w-full object-contain rounded-lg transition duration-300 hover:scale-105">
                        </div>
                    </div>

                    <!-- Product Details -->
                    <div class="p-4 md:p-8 flex flex-col">
                        <!-- Brand & Name -->
                        <div class="mb-4 pb-2 border-b border-gray-100">
                            <p class="text-sm md:text-base font-semibold text-purple-600 mb-1">@Model.Product.Brand</p>
                            <h1 class="text-2xl md:text-3xl font-bold text-gray-800">@Model.Product.Name</h1>
                        </div>

                        <!-- Rating -->
                        <div class="flex items-center mb-4">
                            <div class="flex text-yellow-400">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                </svg>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                </svg>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                </svg>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                </svg>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" opacity="0.3">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                </svg>
                            </div>
                            <span class="ml-2 text-sm text-gray-500">86 reviews</span>
                        </div>

                        <!-- Price Section -->
                        <div class="mb-4 flex items-end">
                            <p class="text-2xl md:text-3xl font-bold text-gray-900">@Model.Product.UnitPrice.ToString("c")</p>
                            <p class="ml-2 text-base text-gray-500 line-through">@(Model.Product.UnitPrice * 1.2).ToString("c")</p>
                            <span class="ml-auto bg-green-100 text-green-800 text-xs px-2 py-1 rounded">20% off</span>
                        </div>

                        <!-- Description -->
                        <div class="mb-4 text-gray-700">
                            <h3 class="text-sm uppercase tracking-wide text-gray-500 mb-1">Description</h3>
                            <p class="text-sm md:text-base">@Model.Product.Description</p>
                        </div>

                        <!-- Ingredients -->
                        <div class="mb-4">
                            <h3 class="text-sm uppercase tracking-wide text-gray-500 mb-1">Ingredients</h3>
                            <p class="text-sm text-gray-600">@Html.Raw(Model.Product.Ingredients.Replace("<p>", "").Replace("</p>", ""))</p>
                        </div>

                        <!-- Product Specs -->
                        <div class="grid grid-cols-2 gap-4 mb-4 py-4 border-y border-gray-100">
                            <div>
                                <h3 class="text-xs uppercase tracking-wide text-gray-500">Weight/Volume</h3>
                                <p class="text-sm md:text-base font-medium text-gray-800">@Model.Product.WeightVolume</p>
                            </div>
                            <div>
                                <h3 class="text-xs uppercase tracking-wide text-gray-500">Units in Stock</h3>
                                <p class="text-sm md:text-base font-medium text-gray-800">@Model.Product.UnitsInStock</p>
                            </div>
                        </div>

                        <!-- Availability Badge -->
                        <div class="mb-4">
                            @if (Model.Product.IsAvailable)
                            {
                                <div class="flex items-center text-green-600">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                    </svg>
                                    <span class="font-medium">In Stock</span>
                                </div>
                            }
                            else
                            {
                                <div class="flex items-center text-red-600">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                    </svg>
                                    <span class="font-medium">Not in Stock</span>
                                </div>
                            }
                        </div>

                        <!-- Quantity Selector -->
                        <div class="flex items-center mb-6">
                            <span class="text-sm md:text-base font-medium text-gray-700 mr-3">Quantity:</span>
                            <div class="flex items-center border border-gray-300 rounded-lg">
                                <button type="button" class="px-3 py-1 text-gray-600 hover:text-gray-800 focus:outline-none" onclick="decrementQuantity()">-</button>
                                <input type="number" asp-for="@Model.Count" id="quantityInput" class="w-12 border-0 text-center focus:outline-none focus:ring-0" min="1" value="1">
                                <button type="button" class="px-3 py-1 text-gray-600 hover:text-gray-800 focus:outline-none" onclick="incrementQuantity()">+</button>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-3 mt-auto">
                            <button type="submit" class="w-full bg-purple-600 hover:bg-purple-700 text-white font-medium py-3 px-6 rounded-lg transition duration-200 flex items-center justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                    <path d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z" />
                                </svg>
                                Add to Cart
                            </button>
                            <a asp-action="Index" class="w-full bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium py-3 px-6 rounded-lg text-center transition duration-200 flex items-center justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                                </svg>
                                Back to Shop
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Delivery & Return Information -->
            <div class="mt-8 bg-white rounded-xl shadow-md overflow-hidden">
                <div class="grid grid-cols-1 md:grid-cols-3 divide-y md:divide-y-0 md:divide-x divide-gray-200">
                    <div class="p-4 md:p-6 flex items-start">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-600 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
                        </svg>
                        <div>
                            <h3 class="font-medium text-gray-900">Free Shipping</h3>
                            <p class="mt-1 text-sm text-gray-500">For orders above ₹499</p>
                        </div>
                    </div>
                    <div class="p-4 md:p-6 flex items-start">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-600 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                        </svg>
                        <div>
                            <h3 class="font-medium text-gray-900">Easy Returns</h3>
                            <p class="mt-1 text-sm text-gray-500">30 day return policy</p>
                        </div>
                    </div>
                    <div class="p-4 md:p-6 flex items-start">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-600 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                        </svg>
                        <div>
                            <h3 class="font-medium text-gray-900">Secure Payments</h3>
                            <p class="mt-1 text-sm text-gray-500">100% secure checkout</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Related Products Section -->
            <div class="mt-12">
                <h2 class="text-xl md:text-2xl font-bold text-gray-800 mb-4">You May Also Like</h2>

                <!-- This is the placeholder for future related products -->
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    @for (int i = 0; i < 4; i++)
                    {
                        <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition duration-300">
                            <div class="p-2">
                                <div class="aspect-w-1 aspect-h-1 w-full bg-gray-200 rounded-lg overflow-hidden">
                                    <!-- Placeholder for future product image -->
                                    <div class="w-full h-32 bg-gray-100 flex items-center justify-center text-gray-400">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                        </svg>
                                    </div>
                                </div>
                                <div class="pt-2">
                                    <p class="text-xs font-medium text-purple-600">Brand</p>
                                    <h3 class="text-sm font-medium text-gray-800 truncate">Product Name</h3>
                                    <p class="text-sm font-bold text-gray-900 mt-1">₹XX.XX</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quantity manipulation script -->
    <script>
        function incrementQuantity() {
            const input = document.getElementById('quantityInput');
            input.value = parseInt(input.value) + 1;
        }

        function decrementQuantity() {
            const input = document.getElementById('quantityInput');
            if (parseInt(input.value) > 1) {
                input.value = parseInt(input.value) - 1;
            }
        }
    </script>
</form>