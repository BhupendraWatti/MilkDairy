@using Microsoft.AspNetCore.Identity
@using MilkDairy.Model

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="flex">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item flex">
            <a id="manage" class="mr-[10px] font-mono text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
        <li class="mr-[10px] font-mono text-white">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="mr-[10px] pl-[30px] pr-[50px] font-mono text-white">
            <a class="nav-link text-dark text-xl" id="register" asp-area="Identity" asp-page="/Account/Register"> <i class="fa-light fa-user"></i>  Sign in</a>
    </li>
        <li class="mr-[10px] pr-[50px] font-mono text-xl text-white">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>

@section Scripts {
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}
