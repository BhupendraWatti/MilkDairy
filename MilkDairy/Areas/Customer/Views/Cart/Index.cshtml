@model ShoppingCartTotal
<form method="post" class="relative top-8">
    
    <div class="mx-auto max-w-4xl overflow-hidden rounded-lg bg-white shadow-xl">
        <div class="flex items-center justify-between bg-gray-800 px-6 py-6 text-white">
            <h5 class="text-lg font-semibold">Shopping Cart</h5>
        </div>
        <div class="space-y-6 p-6">
            <div class="flex items-center justify-between">
                <a asp-area="Customer" asp-action="Index" asp-controller="Home" class="font-medium text-blue-600 hover:underline">&larr; Continue Shopping</a>
            </div>
            @foreach(var item in Model.shoppingCartList){
            <div class="space-y-6">
                <div class="flex items-center border-b pb-6">
                    <div class="h-24 w-24 flex-shrink-0">
                        <img src="@item.Product.ImgURL" class="h-full w-full rounded-lg object-cover" />
                    </div>
                    <div class="flex-1 px-6">
                        <h5 class="text-lg font-semibold text-gray-700">@item.Product.Name</h5>
                        <p class="text-sm text-gray-500">@Html.Raw(item.Product.Description)</p>
                    </div>
                    <div class="flex items-center space-x-4">
                        <h6 class="text-lg font-medium">@item.price.ToString("c") <span class="text-gray-500">x</span>@item.Count</h6>
                        <div class="flex items-center space-x-2">
                            <button asp-action="Plus" asp-route-cart="@item.ID" class="rounded bg-gray-200 px-3 py-2 text-gray-700 hover:bg-gray-300">+</button>
                                <button asp-action="minus" asp-route-cart="@item.ID" class="rounded bg-gray-200 px-3 py-2 text-gray-700 hover:bg-gray-300">-</button>
                        </div>
                            <button asp-action="remove" asp-route-cart="@item.ID" class="rounded-lg bg-red-700 p-[8px] text-white hover:bg-red-500">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
            } 

            <div class="border-t pt-6">
                <div class="flex items-center justify-between text-lg font-semibold">
                    <span>Total</span>
                    <span class="text-gray-800">@Model.OrderHeader.OrderTotal.ToString("c")</span>
                </div>
            </div>

            <div class="text-center">
                <a asp-action="Checkout" class="inline-block w-full rounded-md bg-blue-600 px-6 py-3 font-medium text-white hover:bg-blue-700">Proceed to Checkout</a>
            </div>
        </div>
    </div>
</form>