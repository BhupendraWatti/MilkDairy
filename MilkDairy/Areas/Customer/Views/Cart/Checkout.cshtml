@model ShoppingCartTotal

<form method="post" class="w-full bg-gray-50 min-h-screen">
    <!-- Top Nav Bar -->
    <div class="w-full bg-blue-800 text-white py-4 px-6">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
            <h5 class="text-2xl font-bold">Checkout</h5>
            <a asp-action="Index" class="flex items-center space-x-2 text-blue-200 hover:text-white">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                <span>Return to Cart</span>
            </a>
        </div>
    </div>

    <!-- Progress Bar -->
    <div class="w-full bg-white border-b border-gray-200">
        <div class="max-w-7xl mx-auto py-3 px-6">
            <div class="w-full bg-gray-200 rounded-full h-2.5">
                <div class="bg-blue-600 h-2.5 rounded-full" style="width: 50%"></div>
            </div>
            <div class="flex justify-between mt-2 text-xs text-gray-500 font-medium">
                <span>Cart</span>
                <span class="text-blue-600 font-semibold">Shipping</span>
                <span>Payment</span>
                <span>Confirmation</span>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 py-6">
        <div class="flex flex-col lg:flex-row lg:space-x-8">
            <!-- Left Section: Customer Info -->
            <div class="lg:w-2/3">
                <div class="bg-white p-6 mb-6">
                    <h2 class="text-xl font-bold text-gray-800 mb-6 flex items-center">
                        <span class="bg-blue-600 text-white rounded-full w-6 h-6 inline-flex items-center justify-center mr-3 text-sm">1</span>
                        Shipping Details
                    </h2>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                            <input asp-for="OrderHeader.Name" type="text" class="w-full border-gray-300 border-b-2 border-t-0 border-l-0 border-r-0 px-0 py-2 focus:ring-0 focus:border-blue-600 bg-transparent text-gray-800" />
                            <span asp-validation-for="OrderHeader.Name" class="text-red-600 text-sm"></span>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
                            <input asp-for="OrderHeader.PhoneNumber" type="text" class="w-full border-gray-300 border-b-2 border-t-0 border-l-0 border-r-0 px-0 py-2 focus:ring-0 focus:border-blue-600 bg-transparent text-gray-800" />
                            <span asp-validation-for="OrderHeader.PhoneNumber" class="text-red-600 text-sm"></span>
                        </div>

                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-gray-700 mb-1">Street Address</label>
                            <input asp-for="OrderHeader.StreetAddress" type="text" class="w-full border-gray-300 border-b-2 border-t-0 border-l-0 border-r-0 px-0 py-2 focus:ring-0 focus:border-blue-600 bg-transparent text-gray-800" />
                            <span asp-validation-for="OrderHeader.StreetAddress" class="text-red-600 text-sm"></span>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">City</label>
                            <input asp-for="OrderHeader.City" type="text" class="w-full border-gray-300 border-b-2 border-t-0 border-l-0 border-r-0 px-0 py-2 focus:ring-0 focus:border-blue-600 bg-transparent text-gray-800" />
                            <span asp-validation-for="OrderHeader.City" class="text-red-600 text-sm"></span>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">State</label>
                            <input asp-for="OrderHeader.State" type="text" class="w-full border-gray-300 border-b-2 border-t-0 border-l-0 border-r-0 px-0 py-2 focus:ring-0 focus:border-blue-600 bg-transparent text-gray-800" />
                            <span asp-validation-for="OrderHeader.State" class="text-red-600 text-sm"></span>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Postal Code</label>
                            <input asp-for="OrderHeader.PostalCode" type="text" class="w-full border-gray-300 border-b-2 border-t-0 border-l-0 border-r-0 px-0 py-2 focus:ring-0 focus:border-blue-600 bg-transparent text-gray-800" />
                            <span asp-validation-for="OrderHeader.PostalCode" class="text-red-600 text-sm"></span>
                        </div>
                    </div>
                </div>

                <div class="bg-white p-6 mb-6">
                    <h2 class="text-xl font-bold text-gray-800 mb-6 flex items-center">
                        <span class="bg-blue-600 text-white rounded-full w-6 h-6 inline-flex items-center justify-center mr-3 text-sm">2</span>
                        Shipping Method
                    </h2>

                    <div class="space-y-4">
                        <div class="border border-gray-200 rounded-lg p-4 bg-blue-50 border-blue-200 relative">
                            <input type="radio" name="shipping" id="standard" checked class="absolute top-5 left-4" />
                            <div class="ml-8">
                                <label for="standard" class="font-medium text-gray-800 block">Standard Shipping</label>
                                <p class="text-sm text-gray-600">Estimated delivery: @DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()</p>
                                <p class="text-blue-600 font-medium mt-1">FREE</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Section: Order Summary -->
            <div class="lg:w-1/3">
                <div class="bg-white p-6 sticky top-6">
                    <h2 class="text-xl font-bold text-gray-800 mb-6">Order Summary</h2>

                    <div class="max-h-64 overflow-y-auto mb-6 pr-2">
                        @foreach (var details in Model.shoppingCartList)
                        {
                            <div class="flex items-start py-4 border-b border-gray-100">
                                <div class="bg-gray-100 rounded-lg w-16 h-16 flex items-center justify-center mr-3 flex-shrink-0">
                                    <span class="text-gray-500 text-xs">@details.Product.ImgURL</span>
                                </div>
                                <div class="flex-grow">
                                    <h6 class="font-medium text-gray-900">@details.Product.Name</h6>
                                    <div class="flex justify-between items-center mt-1">
                                        <span class="text-sm text-gray-500">Qty: @details.Count</span>
                                        <span class="font-medium text-gray-900">@((details.price * details.Count).ToString("c"))</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="space-y-3 py-4 border-t border-b border-gray-200">
                        <div class="flex justify-between text-gray-600">
                            <span>Subtotal</span>
                            <span>@Model.OrderHeader.OrderTotal.ToString("c")</span>
                        </div>
                        <div class="flex justify-between text-gray-600">
                            <span>Shipping</span>
                            <span class="text-green-600">Free</span>
                        </div>
                        <div class="flex justify-between text-gray-600">
                            <span>Tax</span>
                            <span>Included</span>
                        </div>
                    </div>

                    <div class="flex justify-between py-4 font-bold text-lg">
                        <span>Total</span>
                        <span class="text-blue-700">@Model.OrderHeader.OrderTotal.ToString("c")</span>
                    </div>

                    <button type="submit" class="w-full bg-blue-600 text-white py-4 rounded-lg font-bold text-lg hover:bg-blue-700 transition-colors duration-200 mb-4">Place Order</button>

                    <div class="flex items-center justify-center space-x-4 text-gray-500 text-sm">
                        <span class="flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                            </svg>
                            Secure
                        </span>
                        <span class="flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                            </svg>
                            Encrypted
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>