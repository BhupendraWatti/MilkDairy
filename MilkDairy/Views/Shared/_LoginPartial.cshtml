@using Microsoft.AspNetCore.Identity
@using MilkDairy.Model
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="flex">
<ul class="flex">
        @if (SignInManager.IsSignedIn(User))
        {
        <li class="mr-6">
            <a id="manage" class="text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li>
            <form id="logoutForm" class="inline-flex" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="text-white">Logout</button>
            </form>
        </li>
    }
    
    

    else
    {
        <li class="mr-6">
            <a class="text-white hover:text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li>
            <a class="text-white hover:text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }

    </ul>
</div>